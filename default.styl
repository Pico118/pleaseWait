body
  background -webkit-radial-gradient(#000 15%, transparent 16%) 0 0,
             -webkit-radial-gradient(#000 15%, transparent 16%) 8px 8px,
             -webkit-radial-gradient(
               rgba(255, 255, 255, 0.1) 15%,
               transparent 20%
             ) 0 1px,
             -webkit-radial-gradient(
               rgba(255, 255, 255, 0.1) 15%,
               transparent 20%
             ) 8px 9px
  background-color #282828
  background-size 16px 16px
  color fgColor
  font-family monospace
  font-size 14px
  font-weight 700
  text-shadow 1px 1px borderColor

h1, h2, #toc > li, #toc, #loaderInfo, footer
  border-radius 4px
  box-shadow inset 2px 2px 30px #000
  padding 10px

h1, h2
  display table
  margin auto
  padding 10px
  text-align center

h1
  font-size 3em
  margin-bottom 5px
  margin-top 20px

  &:before
    content "{"

  &:after
    content "}"

h2
  font-size 1em

h3
  font-size 1.2em
  margin 0
  text-align center

#toc
  display table
  list-style-type none
  margin 60px auto
  padding 0
  width 644px

  > li
    background-color bgColor
    border-color bgColor borderColor borderColor bgColor
    border-style solid
    border-width 1px
    cursor pointer
    float left
    height 30px
    padding 10px
    position relative
    margin 20px
    width 30px

    div
      animation-play-state paused

    &:hover div
      animation-play-state running

#loaderInfo
  background-color bgColor
  border 1px solid fgColor
  display inline-block
  height 120px
  left 0
  padding 5px
  position absolute
  top 0
  visibility: hidden;
  z-index 1

  a
    display block
    font-size 0.75em
    margin-top 85px
    text-align center
    white-space nowrap

    &:before
      content "by "

  > div
    display inline-block
    min-height 120px

footer
  clear both
  display table
  font-size 0.75em
  margin auto
  padding 0.5em
  padding-left 0
  text-align center

  span
    display inline-block
    margin 0 0.5em

a
  color fgColor
  text-decoration underline

  &:hover
    text-shadow 0 0 2px fgColor
