#histogram
  ul
    animation-play-state inherit

    height 30px
    list-style none
    margin 0
    padding 0
    position relative
    overflow hidden
    li
      animation-direction normal
      animation-duration 2s
      animation-iteration-count infinite
      animation-name histogram
      animation-play-state inherit
      animation-timing-function linear

      background-color fgColor
      box-shadow inset 0 0 1px darken(fgColor, 45)

      display inline-block

      height 50%

      margin 70% 1px 0 0
      padding 0

      width: 4px;

      for num in (1..6)
        &:nth-child({num})
          animation-delay 1s * ( num / 6 )

@keyframes histogram
  0%
    transform scaleY(1)
    background-color fgColor
  15%
    transform scaleY(2)
    background-color lighten(fgColor, 20)
  30%
    transform scaleY(0.5)
    background-color fgColor
  45%
    transform scaleY(1)
    background-color fgColor
  100%
    transform scaleY(1)
    background-color fgColor
