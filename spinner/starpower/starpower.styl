#starPower
  animation-direction normal
  animation-duration 1s
  animation-iteration-count infinite
  animation-name starPower
  animation-timing-function linear

  height 30px
  margin auto
  position relative
  width 30px

  div
    height 20px
    left 5px
    position absolute
    top 5px
    width 20px

    &:before, &:after
      border-top 6px solid transparent
      border-bottom 6px solid transparent
      content ''
      height 0
      position absolute
      top 0
      width 0

    &:before
      border-left 12px solid fgColor
      left 0

    &:after
      border-right 12px solid fgColor
      right 0

    &:nth-child(1)
      transform rotate(0deg)

    &:nth-child(2)
      transform rotate(120deg)

    &:nth-child(3)
      transform rotate(240deg)

@-webkit-keyframes starPower
  0%
    transform rotate(0)


  100%
    transform rotate(360deg)
