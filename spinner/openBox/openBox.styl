#openBox
  height 30px
  width 30px

  div
    animation-direction normal
    animation-duration 1s
    animation-iteration-count infinite
    animation-play-state inherit
    animation-timing-function linear
    background-color fgColorRGBA(0.5)
    height 20px
    position absolute
    width 20px

    &:nth-child(1)
      animation-name openBox1
      bottom 10px
      left 7px
      transform rotateX(45deg) rotateY(45deg)

    &:nth-child(2)
      bottom 7px
      right 15px
      transform rotateX(-45deg) rotateY(0) rotateZ(45deg)

    &:nth-child(3)
      animation-name openBox3
      bottom 10px
      right 7px
      transform rotateX(-45deg) rotateY(45deg)

    &:nth-child(4)
      right 7px
      top 10px
      transform rotateX(45deg) rotateY(45deg)

    &:nth-child(5)
      right 15px
      top 7px
      transform rotateX(45deg) rotateY(0) rotateZ(45deg)

    &:nth-child(6)
      left 7px
      top 10px
      transform rotateX(-45deg) rotateY(45deg)

@keyframes openBox1
  0%
    transform rotateX(45deg) rotateY(45deg) translateZ(0)
  20%
    transform rotateX(45deg) rotateY(90deg) translateZ(-6px)
  40%
    transform rotateX(45deg) rotateY(45deg) translateZ(0)
  100%
    transform rotateX(45deg) rotateY(45deg) translateZ(0)

@keyframes openBox3
  0%
    transform rotateX(-45deg) rotateY(45deg) translateZ(0)
  50%
    transform rotateX(-45deg) rotateY(45deg) translateZ(0)
  70%
    transform rotateX(-45deg) rotateY(90deg) translateZ(6px)
  90%
    transform rotateX(-45deg) rotateY(45deg) translateZ(0)
